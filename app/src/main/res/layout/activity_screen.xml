<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityScreen">

    <TextView
        android:id="@+id/textView38"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="Actividad reciente"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/activityPerfilButton"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/ic_baseline_person_24"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Perfil"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/activityActividadButton"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/ic_baseline_menu_24"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Actividad"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/activityHomeButton"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:width="5dp"
        android:color="#000000"
        android:drawableTop="@drawable/ic_baseline_home_24"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Home"
        android:textSize="8sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>